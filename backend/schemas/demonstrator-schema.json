{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://demonstrator-schema",
    "title": "Demostrator schema",
    "description": "A demonstrator schema",
    "type": "object",
    "required": ["powerValue"],
    "properties": {
        "powerValue": {
            "title": "Power [W]",
            "description": "Power dissipated in the plasma (number type)",
            "type": "number"
        },
        "gasProperties": {
            "title": "Gas Properties",
            "description": "Properties of gas medium used with the plasma source (object type)",
            "type": "object",
            "required":["gasMixture"],
            "properties": {
                "gasMixture":{
                    "title": "Gas (mixture)",
                    "description": "Feed gas and admixture (string type)",
                    "type": "string"
                },
                "gasTemperature":{
                    "title": "Gas Temperature [K]",
                    "description": "Temperature of the gas (number type)",
                    "type": "number"
                }
            }
        }
    }
}